<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="@dimen/rowSize"
        android:layout_height="@dimen/rowSize"
        android:contentDescription="@string/userAvatar"
        android:layout_marginStart="@dimen/smallDp"
        android:layout_marginTop="@dimen/smallDp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_bck" />

    <TextView
        android:id="@+id/userSlackName"
        style="@style/bigText"
        android:layout_marginStart="@dimen/smallDp"
        android:layout_marginTop="@dimen/smallDp"
        android:text="@string/testString"
        app:layout_constraintStart_toEndOf="@+id/userAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/languagesTxt"
        style="@style/smallText"
        android:layout_width="@dimen/wrapConstraint"
        android:layout_marginBottom="@dimen/smallDp"
        android:layout_marginEnd="@dimen/smallDp"
        android:layout_marginStart="@dimen/smallDp"
        android:text="@string/testString"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userAvatar" />
</android.support.constraint.ConstraintLayout>