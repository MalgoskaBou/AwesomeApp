<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <Spinner
        android:id="@+id/projectsSpinner"
        style="@style/userSpinner"
        android:layout_height="@dimen/bigSpinnerHeight"
        android:layout_marginTop="@dimen/smallDp"
        android:drawableEnd="@drawable/ic_drop_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actualProjectTxt" />

    <EditText
        android:id="@+id/slackNick"
        style="@style/userInput"
        android:layout_width="@dimen/wrapConstraint"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mediumDp"
        android:ems="10"
        android:hint="@string/nick_from_slack"
        android:inputType="textPersonName"
        android:theme="@style/MyEditTextStyle2"
        app:layout_constraintBottom_toTopOf="@+id/language1Txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logOutBtn"
        style="@style/buttonUser"
        android:text="@string/log_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/saveBtn"
        style="@style/buttonUser"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logOutBtn" />

    <Spinner
        android:id="@+id/lang2Spinner"
        style="@style/userSpinner"
        app:layout_constraintBottom_toTopOf="@+id/language2Txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/lang1Spinner"
        style="@style/userSpinner"
        app:layout_constraintBottom_toTopOf="@+id/yourTrackTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/trackSpinner"
        style="@style/userSpinner"
        app:layout_constraintBottom_toTopOf="@+id/logOutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/actualProjectTxt"
        style="@style/userText"
        android:text="@string/actual_project"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/language1Txt"
        style="@style/userText"
        android:text="@string/language_1"
        app:layout_constraintBottom_toTopOf="@+id/lang2Spinner"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/language2Txt"
        style="@style/userText"
        android:text="@string/language_2"
        app:layout_constraintBottom_toTopOf="@+id/lang1Spinner"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/yourTrackTxt"
        style="@style/userText"
        android:text="@string/your_track"
        app:layout_constraintBottom_toTopOf="@+id/trackSpinner"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        style="@style/userText"
        android:text="@string/welcome_message"
        app:layout_constraintBottom_toTopOf="@+id/slackNick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>